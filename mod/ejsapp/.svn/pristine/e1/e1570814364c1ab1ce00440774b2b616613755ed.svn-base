/**
 *
 * Receives a username and password from Sarlab and checks whether that user exists in Moodle
 * and has, at least, a teacher role.
 *
 * @package    mod
 * @subpackage ejsapp
 * @copyright  2012 Luis de la Torre and Ruben Heradio
 * @license    http://www.gnu.org/copyleft/gpl.html GNU GPL v3 or later
 */

require_once ('../../config.php');

global $DB, $CFG;

$username = $_GET["username"];
$password = $_GET["password"];

$enc_pass = md5($password.$CFG->passwordsaltmain);

if ($DB->record_exists('user', array('username' => $username, 'password' => $enc_pass))) {
    $user = $DB->get_record('user', array('username' => $username, 'password' => $enc_pass));
    if ($user->id == 2) { //admin user
        echo "access=true\n";
    } else {
        $grant_access = false;
        $roles_assig = $DB->get_records('role_assignments', array('userid' => $user->id));
        foreach ($roles_assig as $role_assig) {
            if ($role_assig->roleid <= 3) { //user is teacher in, at least, one course
                echo "access=true\n";
                $grant_access = true;
                break;
            }
        }
        if (!$grant_access) echo "access=false\n";
    }
} else echo "access=false\n";